import React, { useEffect } from 'react'
import {
  Switch,
  Route,
  useLocation,
  useHistory,
  useParams,
  <% if (editor.enable) { -%>
  matchPath,
  <% } -%>
} from 'react-router-dom'
import { onRouteChange } from '@/app'

<% pages.forEach(function(page) { -%>
import <%= page.componentName %> from '<%= page.targetPath %>'
<% }) -%>
<% if (editor.enable) { -%>
import <%= editor.componentName %> from '<%= editor.targetPath %>'
<% } -%>
import NotFound from '@/pages/404'

export default function Routes() {
  const location = useLocation()
  const history = useHistory()
  const params = useParams()

  useEffect(() => {
    onRouteChange({ history, location, params })
  }, [location, history, params])

  return (
    <Switch>
      <% pages.forEach(function(page) { -%>
      <Route exact path="<%= page.route %>" component={<%= page.componentName %>} />
      <% }) -%>
      <% if (editor.enable) { -%>
      <Route exact path="<%= editor.route %>" component={<%= editor.componentName %>} />
      <% } -%>
      <Route path="*" component={NotFound} />
    </Switch>
  )
}